{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": [
      "es2015",
      "es6",
      "dom",
      "dom.iterable"
    ],                     
    "allowJs": true,
    "outDir": "build", 
    "sourceMap": true,              
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "files": [
    "./src/index.ts"
  ]
}